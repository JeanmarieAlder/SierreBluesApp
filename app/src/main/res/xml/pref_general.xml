        <!--android:entryValues="@array/pref_values_theme"-->
        <!--android:key="pref_key_theme"-->
        <!--android:summary="@string/pref_description_theme"-->
        <!--android:title="@string/pref_title_theme" />-->

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_key_switch"
        android:summary="@string/pref_description_switch"
        android:title="@string/pref_title_switch_theme" />

</PreferenceScreen>
